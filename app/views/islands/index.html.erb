<h1>The Island Hub</h1>

<div class="container">
  <div class="icon-bar mt-3">
    <%= link_to '/islands?category=Accomodates%20Spaceships' do %>
      <i class="fa-solid fa-rocket"></i><br>Accomodates<br>Spaceships
    <% end %>

    <%= link_to '/islands?category=Dragon%20Friendly' do %>
      <i class="fa-solid fa-dragon"></i><br>Dragon<br>Friendly
    <% end %>

    <%= link_to '/islands?category=Local%20Wizard' do %>
      <i class="fa-solid fa-hat-wizard"></i><br>Local<br>Wizard
    <% end %>

    <%= link_to '/islands?category=Local%20Cablecar' do %>
      <i class="fa-solid fa-cable-car"></i><br>Local<br>Cablecar
    <% end %>

